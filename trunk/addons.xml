       name="VoxCommando Tools"
       version="0.1.2" 
       provider-name="jitterjames">
  <requires>
		<import addon="xbmc.python" version="2.0"/>
	</requires>
	<extension point="xbmc.python.script" library="default.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Various actions to support and extend VoxCommando</summary>
		<description>Various actions to support and extend VoxCommando. For example a call to do execbuiltin()</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>

